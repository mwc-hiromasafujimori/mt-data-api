{
	"lint": {
		"include": ["src/"],
		"exclude": ["src/testdata/", "src/fixtures/**/*.ts"],
		"rules": {
			"tags": ["recommended"],
			"include": [
				"camelcase",
				"default-param-last",
				"eqeqeq",
				"guard-for-in",
				"no-self-compare"
			],
			"exclude": []
		}
	},
	"fmt": {
		"useTabs": true,
		"lineWidth": 80,
		"indentWidth": 2,
		"semiColons": true,
		"singleQuote": true,
		"proseWrap": "preserve",
		"include": ["src/"],
		"exclude": []
	}
}
